<Page x:ConnectionId='1'
    x:Class="MunchkinUWP.Pages.RemotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:TLIBModel="using:TLIB.Model"
    xmlns:System="using:System"
    xmlns:RemoteSystems="using:Windows.System.RemoteSystems"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Ressources/ResourceDictionary_Settings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:ConnectionId='4' Content="Search for Devices" x:Name="SearchButton"                        Margin="0,10,0,0"/>
            <ListBox x:ConnectionId='5' Grid.Row="1"                                                Margin="5" x:Name="DeviceListBox" HorizontalAlignment="Left">
                <ListBox.ItemTemplate>
                    <DataTemplate                                        >
                        <TextBlock x:ConnectionId='6'                                         />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <CommandBar x:ConnectionId='2' x:Name="CommandbarSettings" Grid.Row="1">
            <AppBarButton x:ConnectionId='3' Name="BtnBack" x:Uid="BtnBack" Icon="Back"               />
        </CommandBar>
    </Grid>
</Page>

